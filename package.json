{
  "name": "happiness-voter",
  "version": "1.0.0",
  "scripts": {
    "database:drop": "knex-migrate down --to 0",
    "database:reset": "npm run database:drop && npm run database:setup",
    "database:setup": "knex migrate:latest",
    "database:rollback": "knex migrate:rollback",
    "database:migrate": "knex migrate:latest",
    "server": "env-cmd -f ./config/dev.env nodemon --watch server ./server/server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Geert Van Campenhout",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "env-cmd": "^9.0.3",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.19.2",
    "knex-migrate": "^1.7.2",
    "koa": "^2.8.1",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^5.1.0",
    "koa-router": "^7.4.0",
    "pg": "^7.12.1"
  },
  "devDependencies": {
    "koa-morgan": "^1.0.1",
    "nodemon": "^1.19.1"
  }
}
