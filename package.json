{
  "name": "happiness-voter",
  "version": "1.0.0",
  "scripts": {
    "database:drop": "knex-migrate down --to 0",
    "database:reset": "npm run database:drop && npm run database:setup",
    "database:setup": "knex migrate:latest && knex seed:run",
    "database:rollback": "knex migrate:rollback",
    "database:migrate": "knex migrate:latest",
    "server": "cross-env NODE_ENV=development nodemon --watch server ./server/server.js",
    "dev": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "test": "jest --watch"
  },
  "author": "Geert Van Campenhout",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "@sendgrid/mail": "^6.4.0",
    "axios": "^0.19.0",
    "bcryptjs": "^2.4.3",
    "core-js": "^2.6.5",
    "dotenv": "^8.1.0",
    "jest": "^24.9.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.19.2",
    "knex-migrate": "^1.7.2",
    "koa": "^2.8.1",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^5.1.0",
    "koa-jwt": "^3.6.0",
    "koa-router": "^7.4.0",
    "node-cron": "^2.0.3",
    "pg": "^7.12.1",
    "validator": "^11.1.0",
    "vue": "^2.6.10",
    "vue-router": "^3.1.2",
    "vue-snotify": "^3.2.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-plugin-eslint": "^3.11.0",
    "@vue/cli-service": "^3.11.0",
    "babel-eslint": "^10.0.1",
    "cross-env": "^5.2.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "koa-morgan": "^1.0.1",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "sass-loader": "^7.3.1",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
